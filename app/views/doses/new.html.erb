<div class="container">
  <h1 class = "text-white">New Ingredient</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="form-inputs text-white">
      <%= f.association :ingredient %>
      <%= f.input :description, placeholder: 'Quantity, type etc...' %>
    </div>
    <div class="form-actions">
      <%= f.submit "Add dose", class: "btn btn-warning m-3" %>
    </div>

  <% end %>
  <%= link_to "All cocktails", cocktails_path, class: "btn btn-success m-3"%>
</div>
