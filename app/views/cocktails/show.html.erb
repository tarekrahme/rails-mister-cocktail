
<div class = "container">
<div class="card-trip bg-dark">
  <%= cl_image_tag @cocktail.photo, crop: :mfit %>
  <div class="card-trip-infos bg-dark text-white">
    <div>
      <h1>🍹 <%= @cocktail.name %></h1>
      <h4>Ingredients:</h4>
      <ul>
      <h2> <% @cocktail.doses.each do |dose| %> </h2>
        <li> <%= dose.ingredient.name.capitalize %> </li>
        <p> <%=   dose.description %> </p>
      <% end %>
      </ul>
    </div>
    <h2 class="card-trip-pricing">Prepared by TR</h2>
  </div>
</div>
<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-info m-3"%>

<%= link_to "All cocktails", cocktails_path, class: "btn btn-success m-1"%>
</div>
</div>
